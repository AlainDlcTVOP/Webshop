@model Order

@{
    Layout = null; // Prevent layout from being rendered twice
}

<div class="list-item order" onclick="ViewOrder(@Model.Id)">
    <div>
        <p>OrderId: @Model.Id</p>
        <p>UserId: @Model.ApplicationUserId</p>
        <p>Date: @Model.Date</p>
        <p>Shipped Date: @Model.ShippedDate</p>
        <p>Delivery Date: @Model.DeliveryDate</p>
        <p>Status: @Model.Status</p>
        <p>Comments: @Model.Comments</p>
            @if (Model.Items.Any())
            {   
                <p>Items:</p>
                <ul>
                    @foreach (var item in Model.Items)
                    {
                        <li>ProductID: @item.ProductID, Name: @item.Name, Price: @item.Price, Quantity: @item.Quantity, RowAmount: @item.RowAmount</li>
                    }
                </ul>
            }
        <p>Order Total: @Model.OrderAmount</p>
    </div>
@*    <partial name="~/Views/Shared/_UpdateOrderLink.cshtml" model="@Model" />
    <partial name="~/Views/Shared/_DeleteOrderLink.cshtml" model="@Model" />*@
</div>
