@model CustomerOrderViewModel

@{
    Layout = null; // Prevent layout from being rendered twice
}

<div class="list-item order" onclick="ViewOrder(@Model.Order.Id)" style="margin-bottom:1em;">
    <div class="order-info">
        <div><b>OrderNr</b>: @Model.Order.OrderNr</div>
        <div><b>Customer</b>: @Model.Customer.FirstName @Model.Customer.LastName</div>
        <div><b>Date</b>: @Model.Order.Date</div>
        <div><b>Status</b>: @Model.Order.Status</div>
    </div>
    <div class="order-actions">
        <partial name="~/Views/Shared/_UpdateOrderLink.cshtml" model="@Model.Order" />
        <partial name="~/Views/Shared/_DeleteOrderLink.cshtml" model="@Model.Order" />
    </div>
</div>
