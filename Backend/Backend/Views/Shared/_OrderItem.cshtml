@model Order

@{
    Layout = null; // Prevent layout from being rendered twice
}

<div class="list-item order" onclick="ViewOrder(@Model.Id)" style="margin-bottom:1em;">
    <div class="order-info">
        <div><b>OrderId</b>: @Model.Id</div>
        <div><b>UserId</b>: @Model.ApplicationUserId</div>
        <div><b>Date</b>: @Model.Date</div>
        <div><b>Status</b>: @Model.Status</div>
    </div>
    <div class="order-actions">
    @*    <partial name="~/Views/Shared/_UpdateOrderLink.cshtml" model="@Model" />
        <partial name="~/Views/Shared/_DeleteOrderLink.cshtml" model="@Model" />*@
    </div>
</div>
