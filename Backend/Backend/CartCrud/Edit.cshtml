@model Backend.Models.ShoppingCart
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container-fluid">

    <h1>Edit Product</h1>

    <div>
        <a class="btn btn-primary" asp-action="*">Back to List</a>
    </div>

    <hr />

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-8">
            <label asp-for="Description" class="control-label"></label>
            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row justify-content-evenly">
            <div class="col-2">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="col-2">
                <input type="submit" value="Edit " class="btn btn-primary" />
            </div>
           
            </div>
        </div>

        <h1 class="h3">Pick new image:</h1>

        <div class="row">

            <div class="form-group col-auto">
                <button type="submit" name="" value="-1">
               
                </button>
            </div>
