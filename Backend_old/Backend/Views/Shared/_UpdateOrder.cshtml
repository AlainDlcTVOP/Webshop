        <label asp-for="Items" class="control-label"></label>
    <input asp-for="Items" type="file" class="form-control" name="items" id="items" multiple />
    <span asp-validation-for="Items" class="text-danger"></span>
    </div>*@

    <div class="form-group">
        <button type="button" class="btn btn-primary" onclick="UpdateOrderPut()">Submit</button>
    </div>
</form>
